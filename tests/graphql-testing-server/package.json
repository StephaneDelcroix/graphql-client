{
    "$schema": "http://json.schemastore.org/package",
    "config": {
        "graphql": "/api/graphql",
        "port": "4000"
    },
    "description": "A copy of https://github.com/graphql/swapi-graphql with query, mutations and subscriptions",
    "devDependencies": {
        "@types/express-graphql": "^0.0.36",
        "@types/graphql": "^0.12.4",
        "@types/node": "^9.4.7",
        "express": "^4.16.3",
        "express-graphql": "^0.6.12",
        "graphql": "^0.13.1",
        "tslint": "^5.9.1",
        "typescript": "^2.7.2"
    },
    "engines": {
        "node": ">=9.0.0",
        "npm": ">=4.5.0"
    },
    "main": "./src/index.js",
    "name": "graphql-testing-server",
    "scripts": {
        "build": "tsc && tslint --fix --project ./tsconfig.json",
        "postinstall": "npm run build",
        "prestart": "npm run build",
        "start": "node ./src/index.js"
    },
    "version": "1.0.0"
}
